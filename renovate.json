{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": ["* 6 * * *"],
  "timezone": "UTC",
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor", "patch", "digest"],
      "minimumReleaseAge": "3 days"
    },
    {
      "matchPackageNames": ["react", "react-dom", "react-i18next"],
      "enabled": false
    },
    {
      "matchPackageNames": ["react-markdown", "remark-gfm"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
