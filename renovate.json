{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "minimumReleaseAge": "3 days",
  "schedule": ["* 6 * * *"],
  "timezone": "UTC",
  "packageRules": [
    {
      "matchPackageNames": ["react-markdown", "remark-gfm"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ],
  "vulnerabilityAlerts": {
    "minimumReleaseAge": "0 days",
    "schedule": ["* * * * *"]
  }
}
