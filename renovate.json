{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": ["* 6 * * *"],
  "timezone": "UTC",
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor", "patch", "digest"],
      "minimumReleaseAge": "3 days",
      "schedule": ["* * * * *"]
    },
    {
      "matchPackageNames": ["/^quay\\.io\\/konflux-ci\\//"],
      "minimumReleaseAge": "0 days"
    },
    {
      "matchPackageNames": ["react", "react-dom", "react-i18next"],
      "enabled": false
    },
    {
      "matchPackageNames": ["@types/node", "@types/react", "react-markdown", "remark-gfm"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchPackageNames": ["@openshift-console/dynamic-plugin-sdk", "@openshift-console/dynamic-plugin-sdk-webpack"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    }
  ]
}
